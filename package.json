{
  "name": "feral-file-artwork-js",
  "version": "1.0.0",
  "description": "A lightweight, dependency-free JavaScript library for software artworks on Feral File",
  "type": "module",
  "main": "src/index.js",
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "esbuild src/index.js --bundle --format=iife --global-name=FeralFile --sourcemap --outfile=dist/artwork_lib.iife.js && esbuild src/index.js --bundle --format=iife --global-name=FeralFile --minify --sourcemap --outfile=dist/artwork_lib.min.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "clean": "rm -rf dist/",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "release:precheck": "npm run lint && npm run coverage && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/feralfile/ffa-js.git"
  },
  "keywords": [
    "feral-file",
    "artwork",
    "generative-art",
    "blockchain",
    "nft",
    "provenance",
    "deterministic-random"
  ],
  "author": "Feral File",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/feralfile/ffa-js/issues"
  },
  "homepage": "https://github.com/feralfile/ffa-js#readme",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@vitest/coverage-v8": "^2.1.9",
    "esbuild": "^0.19.12",
    "eslint": "^9.33.0",
    "jsdom": "^25.0.0",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
